{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.SemanticKernel": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information"
      }
    }
  },
  "AllowedHosts": "*",
  "FRONTEND_URL": "${FRONTEND_URL}",
  "AzureAI": {
    "AzureOpenAI": {
      "Endpoint": "${AZURE_OPENAI_ENDPOINT}",
      "ApiKey": "${AZURE_OPENAI_API_KEY}",
      "ChatDeployment": "${AZURE_OPENAI_DEPLOYMENT:gpt-4o}",
      "EmbeddingDeployment": "${AZURE_OPENAI_EMBEDDING_DEPLOYMENT:text-embedding-3-small}",
      "ApiVersion": "${AZURE_OPENAI_API_VERSION:2024-08-01-preview}"
    },
    "AzureAIInference": {
      "Endpoint": "${AZURE_AI_INFERENCE_ENDPOINT}",
      "ApiKey": "${AZURE_AI_INFERENCE_API_KEY}",
      "ModelName": "${AZURE_AI_INFERENCE_MODEL:gpt-4o}"
    }
  },
  "AgentConfiguration": {
    "ProductionAgent": {
      "Name": "ProductionAssistant",
      "Instructions": "You are a professional AI assistant running in production. Provide accurate, helpful, and efficient responses. Be concise but thorough in your answers.",
      "Description": "Production-ready AI assistant",
      "Provider": "AzureOpenAI",
      "Model": "gpt-4o",
      "Temperature": 0.7,
      "MaxTokens": 1000
    },
    "CustomerSupportAgent": {
      "Name": "CustomerSupport",
      "Instructions": "You are a customer support specialist. Help users with their questions professionally and efficiently. Escalate complex technical issues appropriately.",
      "Description": "Customer support specialist agent",
      "Provider": "AzureOpenAI",
      "Model": "gpt-4o",
      "Temperature": 0.5,
      "MaxTokens": 1200
    }
  },
  "ProductionSettings": {
    "EnableSwagger": false,
    "EnableDetailedErrors": false,
    "UseHttpsRedirection": true,
    "EnableRateLimiting": true,
    "RateLimitRequests": 100,
    "RateLimitWindow": "00:01:00"
  },
  "ApplicationInsights": {
    "InstrumentationKey": "${APPLICATIONINSIGHTS_INSTRUMENTATION_KEY}",
    "ConnectionString": "${APPLICATIONINSIGHTS_CONNECTION_STRING}"
  },
  "HealthChecks": {
    "EnableHealthChecks": true,
    "HealthCheckPath": "/health"
  }
}